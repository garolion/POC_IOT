<Page
    x:Class="POC_IOT.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POC_IOT"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="480"
    d:DesignWidth="800">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="AccueilButton" Content="Home" HorizontalAlignment="Left" Margin="26,46,0,0" VerticalAlignment="Top" Height="57" Width="105" Click="AccueilButton_Click"/>
        <Button x:Name="ParametrageButton_Copy" Content="Settings" HorizontalAlignment="Left" Margin="26,136,0,0" VerticalAlignment="Top" Height="57" Width="105" Click="ParametrageButton_Copy_Click"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="581" Margin="150,29,0,0" VerticalAlignment="Top" Width="6"/>

        <local:AccueilUserControl x:Name="AccueilPane" HorizontalAlignment="Left" Margin="160,0,0,0" VerticalAlignment="Top" Height="480" Width="600"></local:AccueilUserControl>
        <local:ParametrageUserControl x:Name="ParametragePane" HorizontalAlignment="Left" Margin="160,0,0,0" VerticalAlignment="Top" Height="480" Width="600"></local:ParametrageUserControl>
    </Grid>
</Page>
